@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
}
<div class="container mt-3">
    <div class="row">
        <div class="col">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <table class="table table-bordered table-striped table-sm m-1 p-1">
                <tr class="bg-primary text-white p-1 m-1"><td colspan="4"><h2>Role Listesi</h2></td></tr>
                <tr>
                    <th>Role Id</th>
                    <th>Role Name</th>
                    <th></th>
                </tr>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="4" class="text-center">
                            No Roles
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            <td>
                                <form>
                                    <input type="submit" formmethod="get" asp-action="UpdateUserRole" asp-controller="Roles" class="btn btn-secondary" asp-route-id="@role.Id" value="Kullanıcıları Güncelle">
                                    @if (role.Name != "Admin" && role.Name != "User")
                                    {
                                        <input type="submit" formmethod="get" asp-action="Update" asp-controller="Roles" class="btn btn-primary" asp-route-id="@role.Id" value="Güncelle">
                                        <a asp-action="Delete" asp-controller="Roles" class="btn btn-danger" asp-route-id="@role.Id">Sil</a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-primary" disabled>Güncelle</button>
                                        <button class="btn btn-danger" disabled>Sil</button>
                                    }

                                </form>
                            </td>
                        </tr>
                    }
                }

                <tr>
                    <td colspan="4">
                        <a asp-action="Add" class="btn btn-primary">
                            Rol Ekle
                        </a>
                    </td>
                </tr>
            </table>
           
        </div>
    </div>
</div>