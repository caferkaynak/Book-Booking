@model IdentityRole
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
}
<div class="container mt-3">
    <div class="row">
        <div class="col">
            <div class="bg-primary text-white p-1 m-1">
                <h2>Create Role</h2>
            </div>

            <form class="m-1 p-1" method="post">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group">
                    <label form="name">Role Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <input asp-action="Add" asp-controller="Roles" type="submit" class="btn btn-primary" value="Submit" />
                <a asp-action="Index" asp-controller="Roles" class="btn btn-danger">Cancel</a>
            </form>
        </div>
    </div>
</div>