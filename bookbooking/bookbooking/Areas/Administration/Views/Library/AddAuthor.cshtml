@model BookView
@{
    ViewData["Title"] = "AddAuthor";
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <div class="card mx-auto">
        <div class="card-body">
            <div class="form-group">
                <h2>Yazarlar</h2>
                @foreach (var item in Model.Authors)
                {
                    <ul>
                        <li><h5>@item.Name</h5></li>
                    </ul>
                }
            </div>
            <form method="post">
                <div class="form-group">
                    <h2>Yazar Ekle</h2>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" asp-for="Author.Name" placeholder="New Author " />
                </div>
                <div class="form-group">
                    <input asp-action="AddAuthor" asp-controller="Library" class="form-control" type="submit" value="Ekle" />
                </div><div class="form-group">
                    <input asp-action="UpdateAuthor" asp-controller="Library" formmethod="get" class="form-control" type="submit" value="Güncelle" />
                </div>
            </form>
            <div asp-validation-summary="All"></div>
        </div>
    </div>
</div>