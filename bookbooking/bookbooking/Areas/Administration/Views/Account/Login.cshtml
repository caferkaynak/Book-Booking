@model LoginUserView
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Administration/Views/Shared/_AccountLayout.cshtml";
}

<div class="card mx-auto">
    <div class="card-heading mx-auto form-control text-center">
        <h2>LOGIN</h2>
    </div>
    <div class="card-body">
        <form asp-action="Login" asp-controller="Account">
            <div class="form-group">
                <input asp-for="UserName" placeholder="Userame" class="form-control" />
            </div>
            <div class="form-group">
                <input type="password" placeholder="Password" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="form-control">Login</button>
            </div>
            <div class="form-group">
                <a>Register</a>
            </div>
        </form>
        <div asp-validation-summary="All"></div>
    </div>
</div>